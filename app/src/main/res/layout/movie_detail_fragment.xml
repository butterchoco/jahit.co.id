<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.MovieDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingBottom="72dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="232dp">
            <ImageView
                android:id="@+id/movie_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    app:srcCompat="@android:drawable/ic_media_play" />
            </FrameLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp"
            >

                <ImageView
                    android:id="@+id/movie_detail_preview"
                    android:layout_width="120dp"
                    android:layout_height="240dp"
                    android:src="@drawable/ic_movie_placeholder"
                    android:layout_gravity="center"/>

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/text_margin">

                <com.google.android.material.chip.Chip
                    android:id="@+id/movie_detail_vote_average"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/yellow"
                    android:textSize="8dp"/>

                <TextView
                    android:id="@+id/movie_detail_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway"
                    android:textSize="24sp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/movie_detail_release_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/raleway"
                    android:textSize="16sp" />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/movie_add_favorite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_add_fab"
                    android:text="@string/movie_add_favorite"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/text_margin"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/movie_remove_favorite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/grey"
                    android:textColor="@color/black"
                    android:text="@string/movie_remove_favorite"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/text_margin"/>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/movie_detail_overview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/movie_detail_title_overview"
            android:fontFamily="@font/raleway_bold"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/text_margin"
            android:layout_marginHorizontal="@dimen/text_margin"/>

        <TextView
            android:id="@+id/movie_detail_overview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/movie_detail_title_overview"
            android:fontFamily="@font/raleway"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/text_margin"
            android:layout_marginHorizontal="@dimen/text_margin"/>

    </LinearLayout>
</ScrollView>